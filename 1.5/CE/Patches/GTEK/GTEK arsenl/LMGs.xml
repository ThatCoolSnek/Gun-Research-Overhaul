<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>GTek's Arsenal 2.0 - Ultimate Survival and Colony Defense</li>
		</mods>
        <match Class="PatchOperationSequence">
            <operations>

