<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded - Quickdraw</li>
		</mods>
        <match Class="PatchOperationSequence">
        <operations>
            <!-- Automatic Pistol (Glock 18C) -->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VWE_Gun_AutomaticPistol"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisite Inherit="False">PrecisionRifling</researchPrerequisite>
                    </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="VWE_Gun_AutomaticPistol"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Snek_Bakelite</li>
                        </researchPrerequisites>
                    </value>
            </li>
            <!-- Bullpup Rifle (FAMAS) -->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VWE_Gun_BullpupRifle"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisite Inherit="False">PrecisionRifling</researchPrerequisite>
                    </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="VWE_Gun_BullpupRifle"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Snek_Bakelite</li>
                        </researchPrerequisites>
                    </value>
            </li>
            <!-- Bullpup DMR (GM6 Lynx) -->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VWE_Gun_BullpupDMR"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisite Inherit="False">PrecisionRifling</researchPrerequisite>
                    </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="VWE_Gun_BullpupDMR"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Snek_Bakelite</li>
                            <li>Snek_HighCaliber</li>
                        </researchPrerequisites>
                    </value>
            </li>
            <!-- PDW (P90) -->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VWE_Gun_PDW"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisite Inherit="False">PrecisionRifling</researchPrerequisite>
                    </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="VWE_Gun_PDW"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Snek_Bakelite</li>
                        </researchPrerequisites>
                    </value>
            </li>
        </operations>
    </match>
</Operation>

</Patch>