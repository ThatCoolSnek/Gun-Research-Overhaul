<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Pirates</li>
		</mods>
        <match Class="PatchOperationSequence">
        <operations>
            <!-- warcasket autorifle -->
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="VFEP_Box_Autorifle"]</xpath>
                    <value>
                        <researchPrerequisites Inherit="False">
                            <li>VFEP_WarcasketWeaponry</li>
                            <li>HeavyTurrets</li>
                        </researchPrerequisites>
                    </value>
            </li>
            <!-- warcasket Uranium Slug Rifle -->
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="VFEP_Box_UraniumSlugRifle"]</xpath>
                    <value>
                        <researchPrerequisites Inherit="False">
                            <li>VFEP_WarcasketWeaponry</li>
                            <li>SniperTurret</li>
                        </researchPrerequisites>
                    </value>
            </li>
            <!-- warcasket Minigun -->
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="VFEP_Box_Minigun"]</xpath>
                    <value>
                        <researchPrerequisites Inherit="False">
                            <li>VFEP_WarcasketWeaponry</li>
                            <li>MultibarrelWeapons</li>
                        </researchPrerequisites>
                    </value>
            </li>
            <!-- warcasket grenade launcher -->
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="VFEP_Box_GrenadeLauncher"]</xpath>
                    <value>
                        <researchPrerequisites Inherit="False">
                            <li>VFEP_WarcasketWeaponry</li>
                            <li>Snek_Launchers</li>
                        </researchPrerequisites>
                    </value>
            </li>
            <!-- warcasket heavy flamer -->
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="VFEP_Box_HeavyFlamer"]</xpath>
                    <value>
                        <researchPrerequisites Inherit="False">
                            <li>VFEP_WarcasketWeaponry</li>
                            <li>Snek_FlameThrowers</li>
                        </researchPrerequisites>
                    </value>
            </li>
        </operations>
    </match>
</Operation>

</Patch>