<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded - Security</li>
		</mods>
        <match Class="PatchOperationSequence">
        <operations>
            <!-- Searchlight -->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VFES_Turret_Searchlight"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>GunTurrets</li>
                            <li>ColoredLights</li>
                        </researchPrerequisites>
                    </value>
            </li>
            <!-- Flame Turret -->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="VFES_Turret_Flame"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>GunTurrets</li>
                            <li>Snek_FlameThrowers</li>
                        </researchPrerequisites>
                    </value>
            </li>
        </operations>
    </match>
</Operation>

</Patch>