<?xml version="1.0" encoding="utf-8" ?>

<Patch>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>S.T.A.L.K.E.R. - Custom Gauss Rifle</li>
		</mods>
        <match Class="PatchOperationSequence">
        <operations>
            <!-- Gauss Rifle "Item 62" Mk.I -->
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="HRK_STALKER_Gauss"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Snek_AdvancedGunFurniture</li>
                            <li>Snek_ModernScopes</li>
                        </researchPrerequisites>
                    </value>
            </li>
            <!-- Gauss Rifle "Item 62" Mk.II -->
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="HRK_STALKER_Gauss_Sniper"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Snek_AdvancedGunFurniture</li>
                            <li>Snek_ModernScopes</li>
                        </researchPrerequisites>
                    </value>
            </li>
        </operations>
    </match>
</Operation>

</Patch>